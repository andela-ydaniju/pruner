<%= render "partials/header1" %>
<div class="container">

  <div class="col s12 m6 l6">
    <h3>Manage this Short Link</h3>
    <%= form_for @link, url: { method: :patch, action: :update } do |f| %>
      <%= f.label :url_input, "Change Url" %>
      <%= f.text_field "url_input", placeholder: "Enter new Url", pattern: "(https?://)?([a-z0-9]+\\.)?[a-z0-9\\-]+\\.[a-z]+.+[^\\W\\_]", value: @link.url_input, required: true %>
      <p class="status-wrapper">
        <%= f.radio_button :enabled, true, id: "true_status", checked: true %>
        <%= f.label :enabled, "enabled", for: "true_status" %>
      </p>
      <p class="status-wrapper">
        <%= f.radio_button :enabled, false, id: "false_status"%>
        <%= f.label :enabled, "disabled", for: "false_status" %>
      </p>
      <%= f.button "Update", class: "gradient-btn btn waves-effect waves-light" %>
    <% end %>
  </div>

  <div class="col s12 m6 l6">
    <h4>Link Details</h4>
    <p>Link id: <%= @link.id %></p>
    <p>Created by: <%= @link.user.username %></p>
    <p>Created at: <%= @link.created_at %></p>
    <p>Last edited: <%= @link.updated_at %></p>
    <p>Visits: <%= @link.visits %></p>
    <p>Enabled: <%= @link.enabled %></p>
  </div>
</div>
